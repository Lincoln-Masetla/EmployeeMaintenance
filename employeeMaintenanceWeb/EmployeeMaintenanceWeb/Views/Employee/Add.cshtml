<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Add Employee
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-8">
                        <form role="form">

                            <div class="form-group">
                                <label for="txtFirstName">First Name</label>
                                <input type="text" class="form-control required" placeholder="Enter First Name" id="txtFirstName" required>
                            </div>

                            <div class="form-group">
                                <label for="txtLastName">Last Name</label>
                                <input type="text" class="form-control required" placeholder="Enter Last Name" id="txtLastName" required>
                            </div>

                            <div class="form-group">
                                <label for="txtBirthDate">Birth Date</label>
                                <input type='date' class="form-control required" placeholder="Enter Birth Date" id='txtBirthDate' required />
                            </div>

                            <div class="form-group">
                                <label for="txtEmployeeNumber">Employee Number</label>
                                <input type="number" class="form-control required" placeholder="Enter Employee Number" id="txtEmployeeNumber" required>
                            </div>

                            <div class="form-group">
                                <label for="txtEmployedDate">Employed Date</label>
                                <input type='date' class="form-control required" placeholder="Enter Employed Date" id='txtEmployedDate' required />
                            </div>

                            <div class="form-group">
                                <label for="txtTerminatedDate">Terminated Date</label>
                                <input type='date' class="form-control " placeholder="Enter Terminated Date" id='txtTerminatedDate' />
                            </div>
                            
                            <div class="checkbox">
                                <label><input type="checkbox" id="chkActive"> Active</label>
                            </div>
                        </form>
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<button type="button" class="btn btn-primary" id="btnSaveAdd" onclick="submitAddEmployee()">Save</button>